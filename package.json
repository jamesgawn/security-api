{
  "name": "security-api",
  "version": "1.0.0",
  "description": "An API to provide security prices for re-use in other projects.",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "postbuild": "shx cp package.json ./dist/package.json && cd ./dist && npm install --production",
    "test": "jest  --runInBand",
    "coverage": "jest --collectCoverage",
    "lint": "eslint src/**/*.ts",
    "tcl": "npm run coverage && npm run lint",
    "deploy": "npm run build && terraform apply",
    "undeploy": "terraform destroy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesgawn/security-api.git"
  },
  "author": {
    "name": "James Gawn",
    "email": "james@gawn.uk",
    "url": "https://gawn.uk"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesgawn/security-api/issues"
  },
  "homepage": "https://github.com/jamesgawn/security-api#readme",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.93",
    "@types/bunyan": "^1.8.6",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.4.2",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "axios": "^0.21.2",
    "bunyan": "^1.8.14",
    "date-fns": "^2.16.1"
  }
}
